{
  "name": "wiki",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/wiki/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/wiki",
        "index": "apps/wiki/src/index.html",
        "browser": "apps/wiki/src/main.ts",
        "tsConfig": "apps/wiki/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/wiki/public",
            "output": "."
          }
        ],
        "styles": ["apps/wiki/public/css/styles.css"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/wiki/src/environments/environment.ts",
              "with": "apps/wiki/src/environments/environment.production.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "namedChunks": true,
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/wiki/src/environments/environment.ts",
              "with": "apps/wiki/src/environments/environment.development.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "wiki:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "wiki:build:production"
        },
        "development": {
          "buildTarget": "wiki:build:development"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
